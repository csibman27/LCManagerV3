{{> menu}}

<form class="box dark:text-gray-300 dark:bg-gray-900" action="/server/{{server._id}}/updateservermaas" method="POST">
    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-200">Update server {{server.title}} Iaas:</label>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field ">
                <select id="iaas" type="boolean" name="iaas" class="dark:text-gray-300 dark:bg-gray-700 pl-2 border border-slate-300 rounded-md text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
<!--                    <option selected>{{server.iaas}}</option>-->
                    <option value="true">true</option>
                    <option value="false">false</option>
                </select>
            </div>
        </div>
    </div>
    <button class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
        Update Iaas
    </button>
</form>