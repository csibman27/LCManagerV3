{{> menu}}

<section class="section">

    <div class="title">
        <h2 class="text-orange-600">
        <i class="fa-solid fa-server"></i>
         Server Details </h2>
    </div>
    <div>
        <div class="px-4 sm:px-0">
            <h3 class="text-2xl font-semibold leading-7 text-gray-650">{{server.title}}</h3>
            <p class="mt-1 max-w-2xl text-lg leading-6 text-gray-500">{{server.service}}</p>
        </div>
        <div class="mt-6 border-t border-gray-100 dark:border-gray-900">
            <dl class="divide-y divide-gray-100 dark:divide-gray-700">
                <h2 class="pb-4 px-4 text-xl font-semibold leading-7 text-gray-800 dark:text-gray-100">Fundamental Server Data</h2>
                <div class="px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-400"><i class="fa-solid fa-copyright"></i> Model</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 dark:text-gray-400"> {{server.model}}</dd>
                </div>
                <div class="px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-400">Date of Server Purchased</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 dark:text-gray-400">{{server.pdate}}</dd>
                </div>
                <div class="px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-400">Cost of Server</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 dark:text-gray-400">€ {{server.cost}}</dd>
                </div>
                <div class="px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-400">Anticipated expenses up to server decommissioning</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 dark:text-gray-400">{{server.cost}} + ({{server.cost}} * 0.06) /year </dd>
                </div>
                <div class="px-4 py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-400"><i class="fa-regular fa-address-card"></i> Description </dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 dark:text-gray-400"> {{server.desc}}</dd>
                </div>
                <div class="px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-400"><i class="fa-brands fa-opera"></i>perating System</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 dark:text-gray-400">{{server.os}}</dd>
                </div>
                <div class="px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-400"><i class="fa-solid fa-ethernet"></i> Number of Network Cards </dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 dark:text-gray-400"> {{server.nwcard}} </dd>
                </div>
                <div class="pt-6">
                    <h2 class="px-4 pb-4 text-xl font-semibold leading-7 text-gray-800 dark:text-gray-100">Server properties subject to change</h2>
                </div>
                <div class="px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-400">Iaas utilized</dt> {{server.iaas}} <a href="/server/{{server._id}}/editservermaas">
                        <span class="hover:animate-pulse" style="font-size: 17px; color: Dodgerblue;"><i class="fa-solid fa-edit"></i></span>
                    </a></dd>

<!--                    <dt class="text-sm font-medium leading-6 text-gray-900"> Uptime </dt> Value <a href="/server/{{server._id}}/editservercost">-->
<!--                    <span class="hover:animate-ping" style="font-size: 17px; color: Dodgerblue;"><i class="fa-solid fa-rotate"></i></span>-->
<!--                    </a></dd>-->
                </div>
                <div class="px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-400"><i class="fa-solid fa-phone"></i> Support Active Until </dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 dark:text-gray-400"> {{server.support}} <i class="fa-solid fa-arrow-trend-down"></i>
                        <p class="text-rose-400 text-sm font-medium"> {{eSupport}} </p></dd>
                </div>
                <div class="px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-400">Server age</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 dark:text-gray-400">{{serverAgeId}}</dd>
                </div>
                <div class="px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-400"> Total cost of maintenance </dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 dark:text-gray-400">€ {{server.maintenancecost}} <a href="/server/{{server._id}}/editservercost">
                        <span class="hover:animate-pulse" style="font-size: 17px; color: Dodgerblue;"><i class="fa-solid fa-plus"></i></span>
                    </a></dd>
                </div>
                <div class="px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-400"><i class="fa-solid fa-arrow-rotate-left"></i> Lifecycle Visualization </dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 dark:text-gray-400"><div class="{{pie}} hover:animate-pulse"></div></dd>
                </div>
                <div class="px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-400"> Track costs associated with server lifecycle activities including procurement, maintenance, upgrades, and retirement </dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 dark:text-gray-400">{{server.title}}</dd>
                </div>
                <div class="px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                   <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-400"> RAM  </dt> Value <a href="#"> <!-- API connection to source-->
                    <span class="hover:animate-ping" style="font-size: 17px; color: Dodgerblue;"><i class="fa-solid fa-rotate"></i></span>
                </a></dd>
                </div>
                <div class="px-4 py-1 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900 dark:text-gray-400">Attachments</dt>
                    <dd class="mt-2 text-sm text-gray-300 sm:col-span-2 sm:mt-0">
                        <ul role="list" class="divide-y divide-gray-100 rounded-md border border-gray-200 dark:border-gray-700">
                            <li class="flex items-center justify-between py-4 pl-4 pr-5 text-sm leading-6">
                                <div class="flex w-0 flex-1 items-center">
                                    <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M15.621 4.379a3 3 0 00-4.242 0l-7 7a3 3 0 004.241 4.243h.001l.497-.5a.75.75 0 011.064 1.057l-.498.501-.002.002a4.5 4.5 0 01-6.364-6.364l7-7a4.5 4.5 0 016.368 6.36l-3.455 3.553A2.625 2.625 0 119.52 9.52l3.45-3.451a.75.75 0 111.061 1.06l-3.45 3.451a1.125 1.125 0 001.587 1.595l3.454-3.553a3 3 0 000-4.242z" clip-rule="evenodd" />
                                    </svg>
                                    <div class="ml-4 flex min-w-0 flex-1 gap-2">
                                        <span class="truncate font-medium">resume_back_end_developer.pdf</span>
                                        <span class="flex-shrink-0 text-gray-400">2.4mb</span>
                                    </div>
                                </div>
                                <div class="ml-4 flex-shrink-0">
                                    <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">Download</a>
                                </div>
                            </li>
                            <li class="flex items-center justify-between py-4 pl-4 pr-5 text-sm leading-6">
                                <div class="flex w-0 flex-1 items-center">
                                    <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M15.621 4.379a3 3 0 00-4.242 0l-7 7a3 3 0 004.241 4.243h.001l.497-.5a.75.75 0 011.064 1.057l-.498.501-.002.002a4.5 4.5 0 01-6.364-6.364l7-7a4.5 4.5 0 016.368 6.36l-3.455 3.553A2.625 2.625 0 119.52 9.52l3.45-3.451a.75.75 0 111.061 1.06l-3.45 3.451a1.125 1.125 0 001.587 1.595l3.454-3.553a3 3 0 000-4.242z" clip-rule="evenodd" />
                                    </svg>
                                    <div class="ml-4 flex min-w-0 flex-1 gap-2">
                                        <span class="truncate font-medium">coverletter_back_end_developer.pdf</span>
                                        <span class="flex-shrink-0 text-gray-400">4.5mb</span>
                                    </div>
                                </div>
                                <div class="ml-4 flex-shrink-0">
                                    <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">Download</a>
                                </div>
                            </li>
                        </ul>
                    </dd>
                </div>
            </dl>
        </div>
    </div>

<!--    Add Services Section-->
    <hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">
    <div class="title">
<!--        <h2 class="text-teal-600">-->
        <h2 class="text-orange-600">
            <i class="fa-solid fa-file-waveform"></i>
            Add a Service </h2>
    </div>

    <hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">

<!--    List of Services section-->
    <div class="title">
        <h2 class="text-orange-600">
            <i class="fa-solid fa-file-lines"></i>
            List of Services </h2>
    </div>
    <p class="text-lg font-normal text-gray-500 lg:text-xl dark:text-gray-400">{{company}} Data Center Services list.</p>
    {{> search-service-form}}
    {{> search-service-result}}
    <hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">
    {{> list-services}}
</section>

{{> footer}}