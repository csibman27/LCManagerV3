<!--Form Beginning -->
<form action="/dashboard/addserver" method="POST">

<!--   new server form  using tailwind css -->
    <div class="grid grid-cols-3 gap-4">
        <div>
            <label for="base-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Server Name</label>
            <div class="pl-2 border border-slate-300 rounded-md">
                <label for="servername"><i class="fas fa-server text-gray-500"></i></label>
                <input
                        type="text"
                        id="title"
                        name="title"
                        placeholder="Server Name"
                        class="px-2 py-2 w-98 border-0 focus:outline-0"/>
            </div>
        </div>
        <div>
            <label for="base-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Cab Number</label>
            <div class="pl-2 border border-slate-300 rounded-md">
                <label for="ip"><i class="fa-brands fa-codepen text gray-500"></i></label>

                <input
                        type="number"
                        id="cab"
                        name="cab"
                        placeholder="Cab Number"
                        class="px-2 py-2 w-98 border-0 focus:outline-0"/>
            </div>
        </div>
        <div>
            <label for="base-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Operating System</label>
            <div class="pl-2 border border-slate-300 rounded-md">
                <label for="ip"><i class="fas fa-desktop text-gray-500"></i></label>
                <input
                        type="text"
                        id="os"
                        name="os"
                        placeholder="Operating System"
                        class="px-2 py-2 w-98 border-0 focus:outline-0"/>
            </div>
        </div>
        <div>
            <label for="base-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Idrac IP</label>
            <div class="pl-2 border border-slate-300 rounded-md">
                <label for="ip"><i class="fa-solid fa-globe text-gray-500"></i></label>
                <input
                        type="text"
                        id="idrac"
                        name="idrac"
                        placeholder="Idrac Ipv4 Address"
                        class="px-2 py-2 w-98 border-0 focus:outline-0"/>
            </div>
        </div>
        <div>
            <label for="base-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Description</label>
            <div class="pl-2 border border-slate-300 rounded-md">
                <label for="ip"><i class="fa-solid fa-info text-gray-500"></i></label>
                <input
                        type="text"
                        id="desc"
                        name="desc"
                        placeholder="Description"
                        class="px-2 py-2 w-98 border-0 focus:outline-0"/>
            </div>
        </div>
        <div>
            <label for="base-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Backup</label>
            <div class="pl-2 border border-slate-300 rounded-md">
                <label for="ip"><i class="fas fa-server text-gray-500"></i></label>
                <input
                        type="text"
                        id="backupTo"
                        name="backupTo"
                        placeholder="Backup"
                        class="px-2 py-2 w-98 border-0 focus:outline-0"/>
            </div>
        </div>
        <div>
            <label for="base-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Monitoring</label>
            <div class="pl-2 border border-slate-300 rounded-md">
                <label for="ip"><i class="fas fa-desktop text-gray-500"></i></label>
                <input
                        type="text"
                        id="monitoredWith"
                        name="monitoredWith"
                        placeholder="Monitoring"
                        class="px-2 py-2 w-98 border-0 focus:outline-0"/>
            </div>
        </div>
        <div>
            <label for="base-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Support</label>
            <div class="pl-2 border border-slate-300 rounded-md">
                <label for="ip"><i class="fa-solid fa-phone text-gray-500"></i></label>
                <input
                        type="text"
                        id="support"
                        name="support"
                        placeholder="Support"
                        class="px-2 py-2 w-98 border-0 focus:outline-0"/>
            </div>
        </div>
        <div>
            <label for="base-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Service</label>
            <div class="pl-2 border border-slate-300 rounded-md">
                <label for="ip"><i class="fa-brands fa-servicestack text-gray-500"></i></label>
                <input
                        type="text"
                        id="service"
                        name="service"
                        placeholder="Service"
                        class="px-2 py-2 w-98 border-0 focus:outline-0"/>
            </div>
        </div>
        <div>
            <label for="base-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Bios Version</label>
            <div class="pl-2 border border-slate-300 rounded-md">
                <label for="ip"><i class="fa-solid fa-microchip text-gray-500"></i></label>
                <input
                        type="text"
                        id="bios"
                        name="bios"
                        placeholder="Bios Version"
                        class="px-2 py-2 w-98 border-0 focus:outline-0"/>
            </div>
        </div>
        <div>
            <label for="base-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Firmware Version</label>
            <div class="pl-2 border border-slate-300 rounded-md">
                <label for="ip"><i class="fa-solid fa-microchip text-gray-500"></i></label>
                <input
                        type="text"
                        id="firmware"
                        name="firmware"
                        placeholder="Firmware version"
                        class="px-2 py-2 w-98 border-0 focus:outline-0"/>
            </div>
        </div>
        <div>
            <label for="base-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Maas</label>
            <div class="pl-2 border border-slate-300 rounded-md">
                <label for="ip"><i class="fa-solid fa-m text-gray-500"></i></label>
                <input
                        type="text"
                        id="maas"
                        name="maas"
                        placeholder="Maas"
                        class="px-2 py-2 w-98 border-0 focus:outline-0"/>
            </div>
        </div>

    </div>
    <br>
    <button class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
        Add Server
    </button>
</form>
