<form class="box" action="/server/{{server._id}}/addservice" method="POST">
    <label>Enter Service Details:</label>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <input class="input" type="text" placeholder="Enter Name of Service" name="title">
            </div>
            <div class="field">
                <input class="input" type="text" placeholder="Enter OS Name" name="os">
            </div>
            <div class="field">
                <input class="input" type="text" placeholder="Enter Description" name="description">
            </div>
            <div class="field">
                <input class="input" type="text" placeholder="Enter Name of Monitoring" name="monitored">
            </div>
            <div class="field">
                <input class="input" type="text" placeholder="Enter Name of Backup" name="backups">
            </div>
            <div class="field">
                <input class="input" type="text" placeholder="Enter Name of Syslog Server" name="syslog">
            </div>
            <div class="field">
                <input class="input" type="text" placeholder="Login with" name="login">
            </div>
        </div>
    </div>
    <button class="button is-primary">Add Service</button>
</form>