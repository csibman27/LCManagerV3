<!--Archives-->

{{#each dispservers}}
    <div class="box box-link-hover-shadow">
        <!--        Top Part of the card-->
        <h2 class="title" id="search">
            <i class="fa-solid fa-staff-snake"></i>{{title}}, Cab {{cab}}, Purchased {{pdate}}
        </h2>
        <!--        Bottom part of the card-->
        <div class="sticky">
            <a href="/archive/{{_id}}/editserver" class="button">
                <i class="fas fa-edit fa-lg"></i>
            </a>
            <a href="/archive/confirmdelete/{{_id}}" class="button">
                <i class="fa-solid fa-trash-can fa-lg"></i>
            </a>
            <a href="/archive/recommissionserver/{{_id}}" class="button">
                <i class="fa-solid fa-reply fa-lg"></i>
            </a>
            Bios {{bios}} Firmware {{firmware}}
        </div>
    </div>

{{/each}}
