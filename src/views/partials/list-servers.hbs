            <div class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-sky-50 rounded-lg hover:bg-blue-600 focus:outline-none flex flex-row space-x-2.5">
                <a href="/server/{{_id}}" class="button">
                    <i class="fa-solid fa-server fa-xl"></i>
                </a>
                <a href="/server/{{_id}}/editserver" class="button">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="/dashboard/confirmdelete/{{_id}}" class="button">
                    <i class="fa-solid fa-trash-can"></i>
                </a>

                <p>Bios {{bios}}</p>
                <p>Firmware {{firmware}}</p>
                {{#if support }}
