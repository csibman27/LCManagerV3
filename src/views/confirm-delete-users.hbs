<!--Confirm deletion-->

<h2 class="text-4xl font-extrabold dark:text-white">{{id.firstName}}'s account</h2>
<hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">

<article class="message is-info">
    <div class="message-header">
        Please verify the deletion action
        <form action="/users">
            <button class="delete"></button>
        </form>
    </div>
    <div class="message-body">
        Are you sure you want to delete the user {{id.firstName}} {{id.lastName}} with ID {{id._id}}. The removal of this user will be irreversible, and it cannot be recovered or restored.
    </div>
</article>


<div class="flex flex-row space-x-2.5">
    <form action="/users/deleteuser/{{id._id}}" method="POST">
        <button class="field inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-md">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>

            Delete
        </button>
    </form>

    <form action="/users">
        <button class="inline-flex items-center px-4 py-2 bg-blue-700 hover:bg-indigo-300 text-white text-sm font-medium rounded-md">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" />
            </svg>

            Back
        </button>
    </form>
</div>